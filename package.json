{
  "name": "react-native-killswitch",
  "version": "0.0.1",
  "description": "The official React Native implementation of Miregoâ€™s killswitch",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!lib/typescript/example",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "test": "jest",
    "type-check": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{js,ts,tsx}\"",
    "prettier": "prettier -w src",
    "prettier-check": "prettier --check src",
    "prepublishOnly": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn install"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "mirego",
    "killswitch"
  ],
  "repository": "https://github.com/mirego/react-native-killswitch",
  "author": "Charles Demers <cdemers@mirego.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/mirego/react-native-killswitch/issues"
  },
  "homepage": "https://github.com/mirego/react-native-killswitch#readme",
  "devDependencies": {
    "@react-native-community/eslint-config": "^3.0.2",
    "@release-it/conventional-changelog": "^5.0.0",
    "@testing-library/jest-native": "^5.3.0",
    "@testing-library/react-native": "^11.5.0",
    "@types/jest": "^29.2.2",
    "@types/react": "~18.0.25",
    "@types/react-native": "0.70.7",
    "@types/react-test-renderer": "^18.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.3.1",
    "jest-fetch-mock": "^3.0.3",
    "prettier": "^2.0.5",
    "react": "18.2.0",
    "react-native": "0.70.6",
    "react-native-builder-bob": "^0.20.1",
    "react-test-renderer": "^18.2.0",
    "release-it": "^15.0.0",
    "typescript": "^4.5.2",
    "zod": "^3.21.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "packageManager": "^yarn@1.22.15",
  "release-it": {
    "git": {
      "commitMessage": "Release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
